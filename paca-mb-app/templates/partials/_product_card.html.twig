<article class="card product-card">
  <a class="product-link" href="{{ path('product_show', {slug: product.slug}) }}">
    <div class="product-thumb">
    {% if product.productImages|length > 0 %}
        {% set firstImage = product.productImages|first %}
        {% if firstImage %}
            <img src="{{ asset('uploads/' ~ firstImage.filename) }}" alt="{{ product.title }}">
        {% else %}
            <div class="placeholder">pas d'image</div>
        {% endif %}
    {% else %}
        <div class="placeholder">pas d'image</div>
    {% endif %}
    </div>
    <div class="card-body">
      <h3>{{ product.title }}</h3>
      <p class="muted small">
        {{ product.reference ?: '' }}
      </p>

  {% if product.price is not null %}
      <p class="price">{{ (product.price / 100)|number_format(2, '.', ' ') }} â‚¬</p>
  {% endif %}
    </div>
  </a>
</article>
