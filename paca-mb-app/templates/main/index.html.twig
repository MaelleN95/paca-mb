{% extends 'base.html.twig' %}

{% block title %}Accueil — MachinesBois{% endblock %}

{% block body %}
  <section class="hero">
    <h1>Machines et outils pour le travail du bois</h1>
    <p class="lead">Catalogue, occasions et actualités — prototype pédagogique.</p>
  </section>

  <section class="tools">
    <h2>Types d'outils</h2>
    <div class="grid grid-cols-3 gap-4">
      {% for tool in tools %}
        <article class="card tool-card">
          <h3>
            <a href="{{ path('tool_show', {slug: tool.slug}) }}">
              {{ tool.type }} — {{ tool.name }}
            </a>
          </h3>
          {% if tool.description %}
            <p class="muted">
              {{ tool.description|striptags|slice(0,120) ~ (tool.description|length > 120 ? '…' : '') }}
            </p>
          {% endif %}
        </article>
      {% else %}
        <p>Aucun outil trouvé.</p>
      {% endfor %}
    </div>
  </section>
{% endblock %}


